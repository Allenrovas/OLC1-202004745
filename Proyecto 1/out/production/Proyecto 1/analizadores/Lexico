    yyline = 1; 
    yychar = 1; 
%init} 

BLANCOS=[ \r\t]+
entero=[0-9]+
decimal=[0-9]+("."[0-9]+)?
valorcadena=([\"][^\n\"]+[\"])
valorcaracter=[\'][A-Za-z][\']
caracter_ascii=("'${"(((6[5-9])|([7-8][0-9])|(90))|((9[7-9])|(1[0-1][0-9])|(12[0-2]))|(164)|(165)|(32))"}'")
comentario_linea=[\/][\/][^\n]+
comentario_multilinea=\/\*[^"\\/"]+\*\/
variable="_"[A-Za-z0-9]+"_"
asignacionSimbolo="->"

